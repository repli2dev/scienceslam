<div class="new-gallery" n:inner-foreach="$images as $cached => $image">
	<div><a href="{$image}"><img class="new-gallery-item" src="{$cached}" width="{$width}px" height="{$height}px"></a></div>
</div>

{if count($images) === 0}
	<div class="wide-text-block">
		<p><b>Tato galerie neobsahuje žádné obrázky.</b></p>
	</div>
{/if}